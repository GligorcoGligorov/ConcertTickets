@{
}

@model List<EShopAdminApplication.Models.Order>

<div class="container">

    <div class="row m-4">
        <table class="table">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Consumer Details</th>
                    <th scope="col">Number of Concerts</th>
                    <th scope="col"></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                
                    @for (int i = 0; i < Model.Count; i++)
                    {
                        var item = Model[i];
                        <tr>
                            <th scope="row">@(i+1)</th>
                            <td>@item.User.UserName</td>
                            <td>@item.ConcertInOrders.Count</td>
                            <td>
                                <a asp-controller="Order" asp-action="Details" asp-route-orderId="@item.Id" class="btn btn-info">View Order</a>
                            </td>
                        </tr>
                    }
                

            </tbody>
            <tfoot class="thead-dark">
                <tr>
                    <th scope="col">TotalPrice:</th>
                    <th scope="col"></th>
                    <th scope="col"></th>
                    <th></th>
                    <th scope="col"><span class="text-success">$Model.TotalPrice</span></th>

                </tr>
            </tfoot>
        </table>


    </div>
</div>
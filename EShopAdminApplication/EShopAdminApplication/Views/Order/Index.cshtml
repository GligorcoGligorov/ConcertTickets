@{
}

@model List<EShopAdminApplication.Models.Order>


<style>
    html, body {
        height: 100%;
        margin: 0;
    }

    .table {
        background-color: #f1e5cf29;
    }


    .background {
        background-image: url('https://www.pcclean.io/wp-content/uploads/2020/4/RjUB73.jpg');
        filter: blur(8px);
        -webkit-filter: blur(8px);
        height: 100%;
        background-position: center;
        background-repeat: no-repeat;
        background-size: cover;
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
    }
</style>
<div class="background"></div>
<div class="container position-relative">

    <div class="row">
        <a class="btn btn-outline-success" asp-controller="Order" asp-action="ExportAllOrders">Export Orders</a>
    </div>

    <div class="row m-4">
        <table class="table">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Consumer Details</th>
                    <th scope="col">Number of Concerts</th>
                    <th scope="col"></th>
                    <th></th>

                </tr>
            </thead>
            <tbody>

                @for (int i = 0; i < Model.Count; i++)
                {
                    var item = Model[i];
                    <tr>
                        <th scope="row">@(i+1)</th>
                        <td>@item.User.UserName</td>
                        <td>@item.ConcertInOrders.Count</td>
                        <td>
                            <a asp-controller="Order" asp-action="Details" asp-route-orderId="@item.Id" class="btn btn-info">View Order</a>
                            <a asp-controller="Order" asp-action="CreateInvoice" asp-route-orderId="@item.Id" class="btn btn-info">Create Invoice</a>

                        </td>
                    </tr>
                }


            </tbody>
            <tfoot class="thead-dark">
                <tr>
                    <th scope="col">-</th>
                    <th scope="col"></th>
                    <th scope="col"></th>
                    <th></th>
                    <th scope="col">-</th>

                </tr>
            </tfoot>
        </table>


    </div>
</div>